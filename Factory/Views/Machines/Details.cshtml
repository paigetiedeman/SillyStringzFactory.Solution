@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h3>Machine Details</h3>
<hr>

<h4>Machine Type: @Html.DisplayFor(model => model.MachineType)</h4>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This machine does not have any engineers assigned!</p>
}
else
{
  <h4>Engineers assinged to this machine:</h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <h5>@join.Engineer.EngineerName</h5>
    }
  </ul>
}

<p class="btn btn-light">@Html.ActionLink("Back to Machines", "Index")</p>
<p class="btn btn-light">@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId})</p>
<p class="btn btn-light">@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId})</p>
<p class="btn btn-light">@Html.ActionLink("Back to Engineers", "Index", "Engineers")</p>