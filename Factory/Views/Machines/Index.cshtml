@{
  Layout = "_Layout";
}

@using Factory.Models;

<h3>Machines</h3>
<hr>

@if (@Model.Count == 0)
{
  <h4>No machines have been added yet!</h4>
}
@foreach (Machine machine in Model)
{
  <div class="card-deck">
    <div class="card text-center mb-3" style="width: 24rem;">
      <div class="card-body">
        <h5 class="card-title">@Html.ActionLink($"{machine.MachineType}", "Details", new { id = machine.MachineId })</h5>
          <p class="card-text">@machine.MachineStatus</p>
      </div>
    </div>
  </div>
}
<br>
<p class="btn btn-light">@Html.ActionLink("Add New Machine", "Create")</p>
<p class="btn btn-light">@Html.ActionLink("Return Home", "Index", "Home")<p>