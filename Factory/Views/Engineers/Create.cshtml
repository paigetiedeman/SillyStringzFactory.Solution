@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h3></h3>Add a Engineer and Machine</h3>
<hr>

@using (Html.BeginForm())
{
  <div class="form-group">
    <h5>Engineer Name</h5>
    @Html.TextBoxFor(model => model.EngineerName, new { @class = "form-control", @required = "required"})
    <br>
    <h5>Engineer @Html.LabelFor(model => model.EngineerStatus)</h5>
    @Html.ListBox("EngineerStatus", new List<SelectListItem> { 
      new SelectListItem { Text = "⚙️🔨🔧 Working", Value = " ⚙️🔨🔧 Working"},
      new SelectListItem { Text = "🕛 Idle", Value = "🕛 Idle"},
      new SelectListItem { Text = "💤 On Break", Value = "💤 On Break"}
      }, new { @class = "form-control"})
      <br>
        <h5>Machine Type:</h5>
        @Html.DropDownList("MachineId", null, new { @class = "form-control" })
      <br>
    <input type="submit" value="Add New Engineer" class="btn btn-light"/>
  </div>
}

<br>
<p class="btn btn-light">@Html.ActionLink("Show All Engineers", "Index")</p>
<p class="btn btn-light">@Html.ActionLink("See All Machines", "Index", "Machines")</p>