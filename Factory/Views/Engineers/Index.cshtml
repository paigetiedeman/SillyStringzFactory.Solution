@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h3>Engineers</h3>
<hr>

@if (@Model.Count == 0)
{
  <h4>No engineers have been added!</h4>
}

@foreach (Engineer engineer in Model)
{
  <div class="card-deck">
    <div class="card text-center mb-3" style="width: 24rem;">
      <div class="card-body">
        <h5 class="card-title">@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</h5>
        <p class="card-text">@engineer.EngineerStatus</p>
      </div>
    </div>
  </div>
}

<p class="btn btn-light">@Html.ActionLink("Add New Engineer", "Create")<p>
<p class="btn btn-light">@Html.ActionLink("Add a Machine", "AddMachine")<p>
<p class="btn btn-light">@Html.ActionLink("Return Home", "Index", "Home")<p>